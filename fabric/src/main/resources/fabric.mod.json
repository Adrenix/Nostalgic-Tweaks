{
  "schemaVersion": 1,
  "id": "nostalgic_tweaks",
  "version": "${version}",
  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": [
    "${mod_author}"
  ],

  "contributors": [
    {
      "name": "See source contributors",
      "contact": {
        "homepage": "${mod_credits}"
      }
    }
  ],

  "contact": {
    "homepage": "${mod_curse}",
    "sources": "${mod_source}",
    "issues": "${mod_issues}"
  },

  "license": "${mod_license}",
  "icon": "assets/nostalgic_tweaks/nt_fabric_logo.png",
  "environment": "*",
  "entrypoints": {
    "modmenu": [
      "mod.adrenix.nostalgic.fabric.config.gui.ModMenuIntegration"
    ],
    "client": [
      "mod.adrenix.nostalgic.fabric.NostalgicClientFabric"
    ],
    "server": [
      "mod.adrenix.nostalgic.fabric.NostalgicServerFabric"
    ],
    "main": [
      "mod.adrenix.nostalgic.fabric.NostalgicCommonFabric"
    ],
    "nostalgic_tweaks": [
      "mod.adrenix.nostalgic.fabric.api.test.ApiTestHandler"
    ],
    "appleskin": [
      "mod.adrenix.nostalgic.fabric.event.client.support.AppleSkinEvents"
    ]
  },

  "mixins": [
    "mixin.nostalgic_tweaks-common.json",
    "mixin.nostalgic_tweaks-common-client.json",
    "mixin.nostalgic_tweaks-common-widen.json",
    "mixin.nostalgic_tweaks-fabric-client.json",
    "mixin.nostalgic_tweaks-fabric-common.json",
    "mixin.nostalgic_tweaks-sodium.json"
  ],

  "depends": {
    "fabric-api": ">=${fabric_api_version}",
    "minecraft": "=1.20",
    "architectury": ">=${architectury_version}"
  },

  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "${mod_discord}",
        "gui.nostalgic_tweaks.settings.support": "${mod_donate}"
      }
    }
  }
}