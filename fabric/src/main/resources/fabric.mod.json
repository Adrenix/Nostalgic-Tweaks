{
  "schemaVersion": 1,
  "id": "nostalgic_tweaks",
  "version": "${version}",
  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": [
    "${mod_author}"
  ],
  "contributors": [
    {
      "name": "See source contributors",
      "contact": {
        "homepage": "${mod_credits}"
      }
    }
  ],  
  "contact": {
    "homepage": "${mod_curse}",
    "sources": "${mod_source}",
    "issues": "${mod_issues}"
  },
  "license": "${mod_license}",
  "icon": "assets/nostalgic_tweaks/nt_fabric_logo.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "mod.adrenix.nostalgic.fabric.ClientFabric"
    ]
  },
  "mixins": [
    "mixin.nostalgic_tweaks-common.json",
    "mixin.nostalgic_tweaks-fabric.json"
  ],
  "depends": {
    "fabric": "*",
    "fabric-api": ">=${fabric_api_version}",
    "minecraft": "=1.20.2",
    "architectury": ">=${architectury_version}"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "${mod_discord}",
        "gui.nostalgic_tweaks.settings.support": "${mod_donate}"
      }
    },
    "sodium:options": {
      "mixin.features.gui.hooks.debug": false,
      "mixin.features.render.world.clouds": false
    }
  }
}